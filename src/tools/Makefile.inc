INCS += -I. -I..
INCS += -I../..
INCS += -I../../include
CFLAGS += -std=gnu99 -Wall -Werror
CFLAGS += -O2 -D_FORTIFY_SOURCE=2
CFLAGS += -DSRCVERSION='"$(SRCVERSION)"'
LDFLAGS += -Wl,-z,relro
TOOLSDIR=/usr/bin
TARGET_DIR=$(DESTDIR)$(TOOLSDIR)
MANPAGES ?=
MANPAGES_DIR=$(DESTDIR)/usr/share/man/man1
MANPAGES_GZ = $(addsuffix .gz, $(MANPAGES))
MANPAGES_TXT = $(addsuffix .txt, $(MANPAGES))
BASH_COMP_FILES ?=
BASH_COMP_DIR =$(DESTDIR)/etc/bash_completion.d/
CSTYLE=../../../utils/cstyle

all: $(TARGET) $(MANPAGES_TXT)

clean:
	$(RM) $(OBJS)

clobber: clean
	$(RM) $(TARGET) $(TARGET_AR)
ifneq ($(MANPAGES),)
	$(RM) $(MANPAGES_GZ)
	$(RM) $(MANPAGES_TXT)
endif

cstyle:
	$(CSTYLE) -pP *.[ch]

compress: $(MANPAGES_GZ)

install: all compress
ifneq ($(TARGET),)
	install -d $(TARGET_DIR)
	install -p -m 0755 $(TARGET) $(TARGET_DIR)
endif
ifneq ($(MANPAGES_GZ),)
	install -d $(MANPAGES_DIR)
	install -p -m 0644 $(MANPAGES_GZ) $(MANPAGES_DIR)
endif
ifneq ($(BASH_COMP_FILES),)
	install -d $(BASH_COMP_DIR)
	install -p -m 0644 $(BASH_COMP_FILES) $(BASH_COMP_DIR)
endif

%.gz: %
	gzip -c ./$< > $@

%.txt: %
	man ./$< > $@

$(TARGET_AR): $(OBJS)
	$(AR) rv $@ $(OBJS)

$(TARGET): $(OBJS)
	$(CC) $(LDFLAGS) -o $@ $(OBJS) $(LIBS)

%.o: %.c
	$(CC) $(CFLAGS) $(INCS) -c -o $@ $<

.PHONY: all clean clobber cstyle install
